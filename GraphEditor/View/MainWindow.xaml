<Window x:Class="GraphEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        
        <Canvas Background="WhiteSmoke" x:Name="CanvasForGraph">
        <Canvas.ContextMenu >
        <ContextMenu>
            <MenuItem Header="Добавить узел" Command="{Binding InsertNodeCommand}" ></MenuItem>
            <MenuItem Header="Удалить выбранный узел"  Command="{Binding RemoveNodeCommand}"></MenuItem>
            </ContextMenu>
            </Canvas.ContextMenu>
        </Canvas>
                

    </Grid>
</Window>
